{
	"model_name":"Empleado",
	"soft_deletes":"yes",
	"pk":"id",
	"localize":"yes",
	"table":"empleados",
    "fields": [		
        {
            "name": "nombre",
            "type": "string"
        },
        {
            "name": "edad",
            "type": "number"
        },
        {
            "name": "telefono",
            "type": "string"
        },
        {
          "name": "correo",
            "type": "string"  
        },
        {
            "name": "direccion",
            "type": "string"
        },
        {
            "name": "nivel educativo",
            "type": "select",
            "options": {
                "preescolar": "Preescolar",
                "primaria": "Primaria",
                "secundaria": "Secundaria",
                "media tecnica": "Media tecnica",
                "profesional": "Profesional",
                "posgrado": "Posgrado",
                "ninguno": "Ninguno"
            }
        },  
        {
            "name": "cargo",
            "type": "string"
        },
        {
            "name": "Fecha ingreso",
            "type": "date"
        }
    ],

    "validations": [
        {
            "field": "nombre",
            "rules": "required|min:5|max:20"
        },
		{
            "field": "correo",
            "rules": "required|min:5"
        }
    ]
	
}