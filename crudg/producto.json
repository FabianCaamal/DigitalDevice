{
	"model_name":"Producto",
	"soft_deletes":"yes",
	"pk":"id",
	"localize":"yes",
	"table":"productos",
    "fields": [		
        {
            "name": "nombre",
            "type": "string"
        },
        {
            "name": "precio",
            "type": "number"
        },
        {
            "name": "Categoria",
            "type": "select",
            "options": {
                "Bebida": "Bebida",
                "Galleta": "Galleta",
                "Sabrita": "Sabrita"
            }
        },
        {
            "name": "Distribuidor",
            "type": "select",
            "options": {
                "Coca-cola": "Coca-cola",
                "Pepsico": "Pepsico",
                "Grupo bimbo": "Grupo bimbo",
                "Nestle": "Nestle",
                "Mars": "Mars",
                "Holanda": "Holanda"
            }
        }
    ],

    "validations": [
        {
            "field": "nombre",
            "rules": "required|min:5|max:20"
        },
		{
            "field": "precio",
            "rules": "required|min:1"
        }
    ]
	
}
